<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.socbb.core.dao.system.MenuDao">
  <resultMap id="BaseResultMap" type="cn.socbb.core.bean.system.Menu">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="parentId" jdbcType="VARCHAR" property="parent_id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="url" jdbcType="VARCHAR" property="url" />
    <result column="perms" jdbcType="VARCHAR" property="perms" />
    <result column="icon" jdbcType="VARCHAR" property="icon" />
    <result column="type" jdbcType="INTEGER" property="type" />
    <result column="order" jdbcType="INTEGER" property="order" />
    <result column="createTime" jdbcType="TIMESTAMP" property="createtime" />
    <result column="updateTime" jdbcType="TIMESTAMP" property="updatetime" />
  </resultMap>
  <sql id="Base_Column_List">
    id, parentId, name, url, perms, icon, type, order, createTime, updateTime
  </sql>
  
  <select id="findByRoleId" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select
      m.id,
      m.name,
      m.url,
      m.perms,
      m.icon,
      m.type,
      m.order
    from menu m
    left join menu_role smr on smr.menu = m.id
    where smr.role_id = #{roleId}
    order by m.order
  </select>

  <select id="findByUserId" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select
      m.id,
      m.name,
      m.url,
      m.perms,
      m.icon,
      m.type,
      m.order
    from menu m
    left join role_menu smr on smr.menu_id = m.id
    left join user_role sur on sur.role_id = smr.role_id
    where sur.user_id = #{userId}
    order by m.order
  </select>

  <select id="findUrlAndPerms" resultMap="BaseResultMap">
        SELECT
            url,
            perms
        FROM
            menu
        WHERE
            url IS NOT NULL
        ORDER BY
            `order` ASC
    </select>
</mapper>